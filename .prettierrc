{
	"bracketSameLine": true,
	"singleAttributePerLine": false,
	"bracketSpacing": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true,
	"plugins": [
		"prettier-plugin-apex",
		"@prettier/plugin-xml"
	],
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": "*.{yml,yaml}",
			"options": { "tabWidth": 2, "useTabs": false }
		}
	]
}
